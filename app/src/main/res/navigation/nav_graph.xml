<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.cookit.home.view.HomePageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePageFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_countriesFragment"
            app:destination="@id/countriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/planMealsFragment"
        android:name="com.example.cookit.planmeals.view.planMealsFragment"
        android:label="fragment_plan_meals"
        tools:layout="@layout/fragment_plan_meals" >
    </fragment>
    <fragment
        android:id="@+id/favoriteMealsFragment"
        android:name="com.example.cookit.favoritemeals.view.FavoriteMealsFragment"
        android:label="fragment_favorite_meals"
        tools:layout="@layout/fragment_favorite_meals" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cookit.profile.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.cookit.search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <action
        android:id="@+id/action_global_planMealsFragment"
        app:destination="@id/planMealsFragment" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.cookit.categories.view.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/countriesFragment"
        android:name="com.example.cookit.countries.view.CountriesFragment"
        android:label="fragment_countries"
        tools:layout="@layout/fragment_countries" />
</navigation>