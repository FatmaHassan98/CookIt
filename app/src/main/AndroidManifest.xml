<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookIt"
        tools:targetApi="31">
        <activity
            android:name=".planmeals.view.PlanMealsActivity"
            android:exported="false" />
        <activity
            android:name=".favoritemeals.view.FavoriteMealsActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.signup.view.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.signin.view.SigninActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>